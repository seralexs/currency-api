{
    "name": "seralexs/currency-app",
    "description": "Currency exchange API",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "php-di/php-di": "^6.3",
        "symfony/http-foundation": "^5.2",
        "guzzlehttp/guzzle": "^7.2",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app",
            "Core\\": "src/core"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
